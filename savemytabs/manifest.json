{
    "manifest_version": 3,
    "version": "0.0.0.8",
    "name": "SaveMyTabs Manager",
    "author": "Alicia Harewood",
    "description":"SaveMyTabs Manager can be used to save URL from current tab. Build a list of targeted leads to keep track of.",
    "action": {
        "default_popup": "popup.html",
        "developer": "TheLitcyCoder (Alicia Harewood)",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": { 
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "reload_extension": {
            "suggested_key": {
                "default": "Ctrl+Shift+R"
            },
            "description": "Reload extension"
        }
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "commands"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "host_permissions": [  
        "<all_urls>",
        "https://*.firebaseapp.com/*",
        "https://firebase.googleapis.com/"
    ],
    "content_scripts": [
        {
            "matches": ["https://extensionpay.com/*"],
            "js": ["ExtPay.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["http://*/", "https://*/"],
            "js": ["ExtPay.js", "popup.js", "profile.js"]
        }
       
    ]
}
  